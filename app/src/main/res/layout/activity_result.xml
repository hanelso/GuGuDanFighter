<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView"
        android:textSize="38sp"
        android:textColor="#000000"
        android:layout_marginTop="58dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="맞춘개수"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView13"
        android:textSize="52dp"
        android:textColor="#000"
        android:layout_marginTop="26dp"
        android:layout_centerHorizontal="true"
        android:text="/"
        android:layout_below="@+id/textView"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textViewResultCorrectAnswerCount"
        android:textSize="52dp"
        android:textColor="#000"
        android:text="12"
        android:layout_toStartOf="@+id/textView13"
        android:layout_toLeftOf="@+id/textView13"
        android:layout_alignTop="@+id/textView13"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textViewResultQuestionCount"
        android:textSize="52dp"
        android:textColor="#000"
        android:text="30"
        android:layout_alignTop="@+id/textView13"
        android:layout_toEndOf="@+id/textView13"
        android:layout_toRightOf="@+id/textView13"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView14"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="다시 게임을 시작하시겠습니까?"
        android:layout_below="@+id/textView13"
        android:textAlignment="center"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/buttonResultYes"
        android:layout_marginTop="10dp"
        android:text="예"
        android:layout_below="@+id/textView14"
        android:layout_toStartOf="@+id/textViewResultQuestionCount"
        android:layout_toLeftOf="@+id/textViewResultQuestionCount"/>

    <Button
        android:id="@+id/buttonResultNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonResultYes"
        android:layout_marginStart="-4dp"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="-1dp"
        android:layout_toEndOf="@+id/buttonResultYes"
        android:layout_toRightOf="@+id/buttonResultYes"
        android:text="아니오" />

</RelativeLayout>